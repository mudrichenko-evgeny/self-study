<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.mudrichenkoevgeny.selfstudy.ui.screen.statistics.StatisticsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.mudrichenkoevgeny.selfstudy.ui.custom_view.circle_button.CircleButton
            android:id="@+id/back_button"
            android:layout_width="@dimen/circle_button_small_size"
            android:layout_height="@dimen/circle_button_small_size"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/statistics_title_text_view"
            android:layout_marginHorizontal="@dimen/padding_screen"
            android:layout_marginTop="@dimen/padding_screen"
            android:layout_marginBottom="@dimen/padding_items"
            style="@style/ButtonCircle"
            android:src="@drawable/ic_backward"
            android:onClick="@{() -> viewModel.navigateBack()}" />

        <TextView
            android:id="@+id/statistics_title_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/back_button"
            app:layout_constraintEnd_toStartOf="@+id/sort_button"
            android:layout_marginVertical="@dimen/padding_screen"
            android:layout_marginTop="@dimen/padding_screen"
            android:layout_marginBottom="@dimen/padding_items"
            style="@style/TextAccent"
            android:text="@string/statistics"/>

        <com.mudrichenkoevgeny.selfstudy.ui.custom_view.circle_button.CircleButton
            android:id="@+id/sort_button"
            android:layout_width="@dimen/circle_button_small_size"
            android:layout_height="@dimen/circle_button_small_size"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/statistics_title_text_view"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="@dimen/padding_screen"
            android:layout_marginTop="@dimen/padding_screen"
            android:layout_marginBottom="@dimen/padding_items"
            style="@style/ButtonCircle"
            android:onClick="@{() -> viewModel.onSortClicked()}"
            app:sortType="@{viewModel.sortType}"
            tools:src="@drawable/ic_sort_ascending" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/toolbar_bottom_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:barrierMargin="@dimen/padding_items"
            app:constraint_referenced_ids="back_button, statistics_title_text_view, sort_button" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/questions_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_bottom_barrier"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:items="@{viewModel.statisticsList}"
            app:visibleOrGone="@{!viewModel.statisticsList.empty}"
            tools:listitem="@layout/adapter_item_statistics"
            tools:itemCount="5"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/clear_statistics_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="@dimen/padding_screen"
            style="@style/FloatingActionButton"
            android:src="@drawable/ic_delete" />

        <com.mudrichenkoevgeny.selfstudy.ui.custom_view.progress.ProgressView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/Progress"
            app:visibleOrGone="@{viewModel.isLoading()}"
            tools:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>