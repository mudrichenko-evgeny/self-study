<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomNavigation">
        <item name="android:background">@color/background_secondary</item>
        <item name="itemTextColor">@color/foreground_primary_state</item>
        <item name="itemIconTint">@color/foreground_primary_state</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="elevation">@dimen/elevation_size</item>
    </style>

    <style name="TextPrimary" >
        <item name="android:textSize">@dimen/text_primary_size</item>
        <item name="android:textColor">@color/on_background_primary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="TextPrimaryBottom" parent="TextPrimary">
        <item name="android:gravity">bottom</item>
    </style>

    <style name="TextPrimaryCenter" parent="TextPrimary">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextPrimarySingleLine" parent="TextPrimary">
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextAccent" >
        <item name="android:textSize">@dimen/text_accent_size</item>
        <item name="android:textColor">@color/on_background_primary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAccentSingleLine" parent="TextAccent">
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextSnackBar">
        <item name="android:textColor">@color/background_primary</item>
        <item name="android:textSize">@dimen/text_secondary_size</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextInput" >
        <item name="android:textSize">@dimen/text_primary_size</item>
        <item name="android:textColor">@color/on_background_primary</item>
        <item name="android:textColorHint">@color/on_background_secondary</item>
        <item name="android:textColorHighlight">@color/on_background_secondary</item>
        <item name="android:color">@color/on_background_secondary</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:gravity">top</item>
        <item name="android:background">@drawable/background_text_input</item>
        <item name="android:padding">@dimen/padding_items</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="TextInputCenter" parent="TextInput">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ButtonRectangle">
        <item name="android:background">@drawable/background_rectangle</item>
        <item name="android:foreground">@drawable/foreground_ripple_rectangle</item>
        <item name="android:elevation">@dimen/elevation_size</item>
        <item name="enabledBackgroundColorRes">@color/background_accent</item>
        <item name="disabledBackgroundColorRes">@color/background_secondary</item>
        <item name="enabledTextColorRes">@color/on_background_accent</item>
        <item name="disabledTextColorRes">@color/on_background_secondary</item>
        <item name="android:textSize">@dimen/text_primary_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonCircle">
        <item name="android:elevation">@dimen/elevation_size</item>
        <item name="enabledBackgroundColorRes">@color/background_accent</item>
        <item name="disabledBackgroundColorRes">@color/on_background_secondary</item>
        <item name="enabledImageColorRes">@color/on_background_accent</item>
        <item name="disabledImageColorRes">@color/on_background_accent</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="ButtonCircleStroke" parent="ButtonCircle">
        <item name="android:elevation">@dimen/elevation_size</item>
        <item name="strokeBackgroundColorRes">@color/background_primary</item>
    </style>

    <style name="FloatingActionButton">
        <item name="android:backgroundTint">@color/background_accent</item>
        <item name="android:foreground">@drawable/foreground_ripple_circle</item>
        <item name="tint">@color/on_background_accent</item>
        <item name="borderWidth">0dp</item>
    </style>

    <style name="SeekBar" >
        <item name="android:progressBackgroundTint">@color/on_background_secondary</item>
        <item name="android:progressTint">@color/background_accent</item>
        <item name="android:thumbTint">@color/on_background_primary</item>
    </style>

    <style name="Progress">
        <item name="android:translationZ">@dimen/elevation_size</item>
        <item name="backgroundColor">@color/background_primary</item>
        <item name="progressColor">@color/on_background_primary</item>
    </style>

    <style name="LinearProgressBarProgress">
        <item name="backgroundColor">@color/background_secondary</item>
        <item name="progressColor">@color/on_background_primary</item>
    </style>

    <style name="LinearProgressBarStatistics">
        <item name="backgroundColor">@color/negative</item>
        <item name="progressColor">@color/positive</item>
    </style>

    <style name="Switch" >
        <item name="accentColor">@color/on_background_primary</item>
        <item name="primaryColor">@color/background_secondary</item>
        <item name="secondaryColor">@color/background_primary</item>
        <item name="trackColor">@color/on_background_secondary</item>
    </style>

    <style name="Image" >
        <item name="android:scaleType">fitCenter</item>
    </style>

</resources>